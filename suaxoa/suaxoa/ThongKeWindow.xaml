<Window x:Class="suaxoa.ThongKeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:suaxoa"
        mc:Ignorable="d"
        Title="ThongKeWindow" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid x:Name="dgThongKe" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Phòng ban" Binding="{Binding PhongBan}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
